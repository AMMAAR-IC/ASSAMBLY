.MODEL SMALL
.STACK 100H

.DATA
msg1     DB 'Enter first number: $'
msg2     DB 0DH,0AH,'Enter second number: $'
resultMsg DB 0DH,0AH,'Sum is: $'

num1     DB 5, ?, 5 DUP(?)   
num2     DB 5, ?, 5 DUP(?)
sumStr   DB 6 DUP('$')       

.CODE
MAIN:
    MOV AX, @DATA
    MOV DS, AX

    LEA DX, msg1
    MOV AH, 09h
    INT 21h

    LEA DX, num1
    MOV AH, 0Ah
    INT 21h

    LEA DX, msg2
    MOV AH, 09h
    INT 21h

    LEA DX, num2
    MOV AH, 0Ah
    INT 21h

    LEA SI, num1 + 2
    CALL STR_TO_INT
    MOV BX, AX        

    LEA SI, num2 + 2
    CALL STR_TO_INT
    ADD AX, BX       

    MOV BX, AX
    LEA DI, sumStr + 5
    MOV CX, 0

CONVERT_LOOP:
    XOR DX, DX
    MOV AX, BX
    DIV WORD PTR 10
    ADD DL, '0'
    DEC DI
    MOV [DI], DL
    INC CX
    MOV BX, AX
    CMP AX, 0
    JNZ CONVERT_LOOP

    LEA DX, resultMsg
    MOV AH, 09h
    INT 21h

    MOV DX, DI
    MOV AH, 09h
    INT 21h

    ; Exit
    MOV AH, 4Ch
    INT 21h

STR_TO_INT:
    XOR AX, AX      
    XOR BX, BX

NEXT_DIGIT:
    MOV BL, [SI]
    CMP BL, 0DH
    JE END_STR
    CMP BL, 0AH
    JE END_STR
    CMP BL, 0
    JE END_STR

    SUB BL, '0'
    MOV BH, 0
    MOV CX, 10
    MUL CX
    ADD AX, BX
    INC SI
    JMP NEXT_DIGIT

END_STR:
    RET
END MAIN
